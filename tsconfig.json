{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "typeRoots": ["node_modules/@types"],
    "outDir": "src",
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "rootDir": "src/",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/*/files/**/*"
  ]
}
